{
  "manifest_version": 3,
  "name": "Website Reputation Checker",
  "description": "Check the reputation of a website before you visit it!",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon-48.png"
  }
}
